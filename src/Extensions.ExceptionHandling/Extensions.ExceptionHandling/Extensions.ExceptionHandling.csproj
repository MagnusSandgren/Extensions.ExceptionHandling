<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <PackageId>Sandbranch.Extensions.ExceptionHandling</PackageId>
    <Authors>Magnus Sandgren</Authors>
    <Product>Sandbranch.Extensions.ExceptionHandling</Product>
    <Description>This is a simple litle library built to ensure consistant global error handling, supporting RFC 7807 in ASP .net core APIs.</Description>
    <Copyright>Copyright © 2019 Magnus Sandgren. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/sandbranch/Extensions.ExceptionHandling</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sandbranch/Extensions.ExceptionHandling</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageLicenseUrl>https://github.com/sandbranch/Extensions.ExceptionHandling/blob/master/LICENSE.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="4.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
